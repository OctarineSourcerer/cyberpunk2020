{{#*inline "itemListing"}}
  <div class="field gear item-edit rc-item-delete" data-item-id="{{id}}">
            <div class="field-image roll fire-weapon action" style="background-image: url({{img}})" data-item-id="{{id}}"></div>
            <label>{{name}}</label>
            <span class="flex-pad"></span>
            <span>
                <p class="inactive">{{type}}</p>
            </span>
        </div>
{{/inline}}

<div class="field-list no-wrap">
    <div class="field">
        <label for="data.eurobucks">{{CPLocal "Eurobucks"}}</label>
        <input name="data.eurobucks" type="number" value="{{data.eurobucks}}">
    </div>
    <div class="field">
        <label for="data.carryWeight">{{CPLocal "Weight"}}</label>
        <input class="not-editable" name="data.carryWeight" type="number" value="{{data.carryWeight}}" readonly>
    </div>
</div>

{{#if (equals items.length 0)}}
    <div class="inactive">Drag items here to add (for now)</div>
{{/if}}
<div class="field-list">
    {{#each gear.weapons}}
        {{> itemListing}}
    {{/each}}
    {{#each gear.armor}}
        {{> itemListing}}
    {{/each}}
    {{#each gear.misc}}
        {{> itemListing}}
    {{/each}}
</div>