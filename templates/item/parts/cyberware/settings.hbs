<div class="field-list">
    {{> (template "fields/string") label="CyberwareType" edit="data.cyberwareType"}}
    {{> (template "fields/string") label="CyberwareSubtype" edit="data.cyberwareSubtype"}}
    {{> (template "fields/string") label="SurgeryCode" edit="data.surgCode"}}
    <div class="field">
        
        <label for="data.humanityCost">{{CPLocal "HumanityCostRoll"}}</label>
        <span class="flex-pad"></span>
        <input class="textsize" name="data.humanityCost" S
            type="text" value="{{data.humanityCost}}"/>
        <div class="humanity-cost-roll field-image action" style="background-image: url('../../../icons/svg/d10-grey.svg')"></div>
    </div>
    {{> (template "fields/number") label="HumanityLoss" edit="data.humanityLoss"}}
    {{> (template "fields/string") label="Abbrev" edit="data.abbrev"}}
    {{> (template "fields/number") label="Slots" edit="data.slots"}}
    {{> (template "fields/number") label="Spaces" edit="data.spaces"}}
</div>